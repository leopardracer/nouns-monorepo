{
    "version": 1.5,
    "provider": {
        "id": "openai",
        "model": "gpt-4o",
        "prompt": "Translate accurately from {source} to {target}, maintaining the original meaning."
    },
    "locale": {
        "source": "en-US",
        "targets": [
            "ja-JP",
            "zh-CN"
        ]
    },
    "buckets": {
        "po": {
            "include": [
                "src/locales/[locale].po"
            ]
        }
    },
    "$schema": "https://lingo.dev/schema/i18n.json"
}